<!DOCTYPE html>
<html lang="en">
<head>
    <title>ContentShow</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/contentShow.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script type="text/javascript">
    function xoahaykhong(tinnhan){
        if(window.confirm(tinnhan)==true){
            return true;
        }
        return false;
    }
    </script>
</head>
<body>
<div class="container pt-5 jumbotron ">
    <h2>Welcome to {{names}}</h2>
    <div class="form-inline my-2 my-lg-0">
        <a href="/auths/logout"><button class="btn btn-dark my-2 my-sm-0" type="submit">Logout</button></a>
        <a href="/"><button class="btn btn-dark my-2 my-sm-0 ml-3">Home</button></a>
        <a href="/upload"><button class="btn btn-dark my-2 my-sm-0 ml-3">Upload</button></a>
        <a href="/estored"><button class="btn btn-dark my-2 my-sm-0 ml-3">Post</button></a>
    </div>
    <br>

    <!-- Tab panes -->
    <div class="tab-content">
        <div id="/upload" class="container tab-pane active"><br>
            <h3>UpLoad</h3>
            <a href="/upload"><i class="fa fa-upload fa-3x pt-3 pl-4" aria-hidden="true" ></i></a>
        </div>
        <div id="Post" class="container tab-pane fade"><br>
            <h3>Post</h3>
            <table class="table table-striped table-bordered table-inverse table-hover table-sm table-inverse">
                <thead class="thead-inverse">
                    <tr>
                        <th>Name</th>
                        <th>subject</th>
                        <th>Purport</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                <% data.forEach(function(motphantu){ %>
                <tr>
                    <td scope="row"> <%= motphantu.name %></td>
                    <td><%= motphantu.subject %></td>
                    <td><%= motphantu.ND %></td>
                    <td>
                    <a href="/contentUpdate/<%= motphantu._id %>">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    </a>
                    /
                    <a onclick="return xoahaykhong('Bạn có chắc chăc muốn xoá không');" href="/contentDele/<%= motphantu._id %>">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                    </td>
                </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
        <!-- <div id="menu2" class="container tab-pane fade"><br>
        <h3>Menu 2</h3>
        <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
        </div> -->
    </div>
</div>


</body>
</html>