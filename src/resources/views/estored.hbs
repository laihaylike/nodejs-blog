<!DOCTYPE html>
<html lang="en">
<head>
    <title>
        <%= title %> 
    </title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="container jumbotron mt-4" style="padding-left:200px; padding-right:200px;" >
        <div class="mt-4">
    <div>
      <h3>Danh sách bài viết</h3>
      <a href="/trash">Thùng rác</a>
    </div>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Tên sách</th>
            <th scope="col">Tác giả</th>
            <th scope="col">Thời gian tạo</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each contents}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.author}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href="/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                    <a href="" class="btn btn-link" data-toggle="modal" data-ma="{{this._id}}" data-target="#delete-content-modal">Xoá</a>
                </td>
            </tr>
            {{else}}
              <tr>
                <td colspan="5" class="text-center">
                  Bạn chưa đăng bài viết nào. <a href="/upload">Đăng bài viết</a>
                </td>
              </tr>
            {{/each}}
        </tbody>
</table>
</div>
</div>

<div id="delete-content-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xoá bài viết</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn muốn xoá bài viết này</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-content" type="button" class="btn btn-danger">Xoá bỏ</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-content-form" action="/{{contents._id}}?_method=DELETE" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function(){
        var contentId;
        var deleteForm = document.forms['delete-content-form'];
        var btnDeleteContent = document.getElementById('btn-delete-content');

        $('#delete-content-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            contentId = button.data('ma') // Extract info from data-* attributes
        });

        btnDeleteContent.onclick = function() {
            deleteForm.action = '/' + contentId + '?_method=DELETE';
            deleteForm.submit();
        }
    });
</script>
</body>
</html>
